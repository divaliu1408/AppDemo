<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diva.appdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Manager.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.FriendsActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.ChatActivity2"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".Activity.PopupWindowActivity"></activity>
        <activity android:name=".Activity.QRCodeActivity"/>
        <activity android:name=".Activity.ScanCodeActivity"/>
        <activity android:name=".zxing.activity.CaptureActivity"/>
        <service
            android:name=".Service.MyService"
            android:enabled="true"
            android:exported="true"
            />
        <service android:name=".Service.MyIntentService" />


    </application>

</manifest>